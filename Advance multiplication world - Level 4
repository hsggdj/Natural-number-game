induction c with d hd generalizing b,
rw mul_zero,
intro h,
rw mul_eq_zero_iff at h,
cases h,
exfalso,
exact ha(h),
exact h,

intro h1,
cases b,
rw mul_zero a at h1,
symmetry at h1,
rw mul_eq_zero_iff at h1,
cases h1,
exfalso,
exact ha(h1),
symmetry,
exact h1,

apply succ_eq_succ_of_eq,
repeat {rw mul_succ at h1},
have h2:= add_right_cancel (a*b) a (a*d) (h1),
apply hd(b),
exact h2,
